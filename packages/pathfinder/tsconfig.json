{
  "compilerOptions": {
    "outDir": "../../build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "baseUrl": "./"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "../node_modules"
  ]
}